rule "lowhp"
when CharacterData(hp<=30,$n:playerNumber)
$m:Message()
then  $m.setNext($m.getPlayerName($n)+" is in DANGER!");
$m.addComments($m.getPlayerName($n)+" is in DANGER!");
$m.addComments("This ukiyoe is draw by Hokusai in 1815"); 
end
rule "lose"
